<Window x:Class="Course.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Course"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="T1" Click="T1_Click" Grid.Row="0" FontSize="30" FontWeight="SemiBold">Task - 1</Button>
        <Button x:Name="T2" Click="T2_Click" Grid.Row="1" FontSize="30" FontWeight="SemiBold">Task - 2</Button>
        <Button x:Name="T3" Click="T3_Click" Grid.Row="2" FontSize="30" FontWeight="SemiBold">Task - 3</Button>
    </Grid>
</Window>
